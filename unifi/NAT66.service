[Unit]
Description=Enable NAT66 on Startup
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStart=bash -c 'ip6tables -t nat -A POSTROUTING -o eth1 -j MASQUERADE;\
  curl -o /lib/systemd/system/NAT66.service https://raw.githubusercontent.com/HPPinata/Notizen/main/unifi/NAT66.service;\
  systemctl daemon-reload'
ExecStop=bash -c 'ip6tables -t nat -D POSTROUTING -o eth1 -j MASQUERADE;\
  curl -o /lib/systemd/system/NAT66.service https://raw.githubusercontent.com/HPPinata/Notizen/main/unifi/NAT66.service;\
  systemctl daemon-reload'
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
